<section class="orders-show">

  <header class="page-header">
    <h1>Order <%= @order.id %></h1>
  </header>


  <div class="order-summary jumbotron">
  <table>
   <thead>
    <tr>
      <th>Product</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
    <tbody>
      <%= render 'order', order_item: @order_items %>
    </tbody>
   </thead>
  </table>

    <h4>Total: <%= humanized_money_with_symbol @order.total %>
    <h4><%= @order.email %></h4>
    <h4>Thank you for your order!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
